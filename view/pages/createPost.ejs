<title>Social Gym | Create Post</title>
<link rel="stylesheet" href="/stylesheets/createPost.css">

<body>
    <form action="/createPost" method="post" class="post-form" >
      <div class="container">
        <label for="p-title">Title</label>
        <input type="text" id="p-title" name="title">
      </div>
      <div class="container">
        <label for="p-description">Description</label>
        <textarea name="description" id="p-description" cols="50" rows="5"></textarea>
      </div>
      <div class="btn-container">
        <button>Create Post</button>
      </div>
    </form>
</body>